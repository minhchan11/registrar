@{
    Layout="Shared/_Layout.cshtml";
}
@if (@Model.Count == 0)
{
  <p>No students have been added yet!</p>
}
else
{
  <h1>Here is your list of students:</h1>
  <ul>
    @foreach (var student in Model)
    {
      <li><a href="/students/@student.GetId()">@student.GetName(), enrolled in @student.GetEnrollDate()</a></li>
    }
  </ul>
}
<div class="panel panel-success">
  <div class="panel-heading">Add a new course</div>
  <div class="panel-body">
    <form action="/students/new" method="post">
      <label for="student-name">Name of Student:</label>
      <input type="text" name="student-name">
      <label for="student-enrolldate">Add a new enrollment date:</label>
      <input type="text" name="student-enrolldate">
      <button type="submit">Add a new student</button>
    </form>
  </div>
</div>
<p><a href="/">Return home</a></p>
