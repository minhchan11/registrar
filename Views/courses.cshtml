@{
    Layout="Shared/_Layout.cshtml";
}
@if (@Model.Count == 0)
{
  <p>No courses have been added yet!</p>
}
else
{
  <h1>Here is your list of courses:</h1>
  <ul>
    @foreach (var course in @Model)
    {
      <li><a href="/courses/@course.GetId()">@course.GetCourseName(): @course.GetCourseNumber()</a></li>
    }
  </ul>
}
<div class="panel panel-success">
  <div class="panel-heading">Add a new course</div>
  <div class="panel-body">
    <form action="/courses/new" method="post" id="new-course">
      <label for="course-name">Course Name:</label>
      <input type="text" name="course-name" id="course-name">

      <label for="course-number">Course Number:</label>
      <input type="text" name="course-number" id="course-number">
  </div>
</div>
<button type="submit" class="btn btn-lg btn-info">Add a new course</button>
<p><a href="/">Return home</a></p>
